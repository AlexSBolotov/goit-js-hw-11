<div class='photo-card'>
  <img
    src='{{this.webformatURL}}'
    alt='{{this.tags}}'
    loading='lazy'
    width='300'
  />
  <div class='info'>
    <p class='info-item'><b>Likes</b><br />{{this.likes}}</p>
    <p class='info-item'><b>Views</b><br />{{this.views}}</p>
    <p class='info-item'>
      <b>Comments</b><br />{{this.comments}}
    </p>
    <p class='info-item'>
      <b>Downloads</b><br />{{this.downloads}}
    </p>
  </div>
</div>